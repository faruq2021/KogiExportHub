@model IEnumerable<KogiExportHub.Models.EnvironmentalCompliance>
@{
    ViewData["Title"] = "Environmental Compliance";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0"><i class="fas fa-leaf"></i> Environmental Compliance</h3>
                        <p class="text-muted mb-0">Monitor and manage environmental compliance records</p>
                    </div>
                    <a href="@Url.Action("CreateCompliance")" class="btn btn-success">
                        <i class="fas fa-plus"></i> New Compliance Record
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Miner</th>
                                        <th>Compliance Type</th>
                                        <th>Assessment Date</th>
                                        <th>Status</th>
                                        <th>Inspector</th>
                                        <th>Certificate</th>
                                        <th>Fine Amount</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var compliance in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@compliance.Miner?.FullName</strong><br>
                                                <small class="text-muted">@compliance.Miner?.LicenseNumber</small>
                                            </td>
                                            <td>@compliance.ComplianceType</td>
                                            <td>@compliance.AssessmentDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @switch (compliance.ComplianceStatus)
                                                {
                                                    case "Compliant":
                                                        <span class="badge bg-success">@compliance.ComplianceStatus</span>
                                                        break;
                                                    case "Non-Compliant":
                                                        <span class="badge bg-danger">@compliance.ComplianceStatus</span>
                                                        break;
                                                    case "Pending Review":
                                                        <span class="badge bg-warning">@compliance.ComplianceStatus</span>
                                                        break;
                                                    case "Under Investigation":
                                                        <span class="badge bg-info">@compliance.ComplianceStatus</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@compliance.ComplianceStatus</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@(compliance.InspectorName ?? "N/A")</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(compliance.CertificateNumber))
                                                {
                                                    <span>@compliance.CertificateNumber</span><br>
                                                    @if (compliance.CertificateExpiry.HasValue)
                                                    {
                                                        <small class="text-muted">Expires: @compliance.CertificateExpiry.Value.ToString("MMM dd, yyyy")</small>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No Certificate</span>
                                                }
                                            </td>
                                            <td>
                                                @if (compliance.FineAmount.HasValue && compliance.FineAmount > 0)
                                                {
                                                    <span>â‚¦@compliance.FineAmount.Value.ToString("N2")</span><br>
                                                    @switch (compliance.FineStatus)
                                                    {
                                                        case "Paid":
                                                            <small class="badge bg-success">Paid</small>
                                                            break;
                                                        case "Pending":
                                                            <small class="badge bg-warning">Pending</small>
                                                            break;
                                                        case "Waived":
                                                            <small class="badge bg-info">Waived</small>
                                                            break;
                                                        default:
                                                            <small class="badge bg-secondary">@compliance.FineStatus</small>
                                                            break;
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No Fine</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("ComplianceDetails", new { id = compliance.Id })" 
                                                       class="btn btn-sm btn-outline-primary" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-leaf fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Compliance Records Found</h5>
                            <p class="text-muted">Start by creating your first environmental compliance record.</p>
                            <a href="@Url.Action("CreateCompliance")" class="btn btn-success">
                                <i class="fas fa-plus"></i> Create First Record
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').alert('close');
        }, 5000);
    </script>
}