@model IEnumerable<KogiExportHub.Models.MiningActivity>
@{
    ViewData["Title"] = "Mining Activities";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0"><i class="fas fa-list"></i> Mining Activities</h3>
                        <p class="text-muted mb-0">Track and manage all mining activities</p>
                    </div>
                    <a href="@Url.Action("CreateActivity")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Log New Activity
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Date</th>
                                        <th>Miner</th>
                                        <th>Activity Type</th>
                                        <th>Mineral Type</th>
                                        <th>Quantity (kg)</th>
                                        <th>Location</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var activity in Model)
                                    {
                                        <tr>
                                            <td>@activity.ActivityDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (activity.Miner != null)
                                                {
                                                    <span>@activity.Miner.FullName</span><br>
                                                    <small class="text-muted">@activity.Miner.LicenseNumber</small>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@activity.ActivityType</span>
                                            </td>
                                            <td>@activity.MineralType</td>
                                            <td>@activity.Quantity.ToString("N2")</td>
                                            <td>@activity.ActivityLocation</td>
                                            <td>
                                                @switch (activity.Status)
                                                {
                                                    case "Completed":
                                                        <span class="badge bg-success">@activity.Status</span>
                                                        break;
                                                    case "In Progress":
                                                        <span class="badge bg-warning">@activity.Status</span>
                                                        break;
                                                    case "Planned":
                                                        <span class="badge bg-secondary">@activity.Status</span>
                                                        break;
                                                    case "Suspended":
                                                        <span class="badge bg-danger">@activity.Status</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-light text-dark">@activity.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <button type="button" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#activityModal@(activity.Id)">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No mining activities recorded yet</h5>
                            <p class="text-muted">Start by logging your first mining activity.</p>
                            <a href="@Url.Action("CreateActivity")" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Log First Activity
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Activity Detail Modals -->
@foreach (var activity in Model)
{
    <div class="modal fade" id="activityModal@(activity.Id)" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Activity Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Date:</strong> @activity.ActivityDate.ToString("MMMM dd, yyyy")</p>
                            <p><strong>Time:</strong> @activity.StartTime.ToString(@"hh\:mm") - @activity.EndTime.ToString(@"hh\:mm")</p>
                            <p><strong>Activity Type:</strong> @activity.ActivityType</p>
                            <p><strong>Mineral Type:</strong> @activity.MineralType</p>
                            <p><strong>Quantity:</strong> @activity.Quantity.ToString("N2") kg</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Location:</strong> @activity.ActivityLocation</p>
                            <p><strong>Workers:</strong> @activity.WorkersCount</p>
                            <p><strong>Equipment:</strong> @(activity.EquipmentUsed ?? "Not specified")</p>
                            <p><strong>Status:</strong> @activity.Status</p>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(activity.Description))
                    {
                        <div class="mt-3">
                            <strong>Description:</strong>
                            <p>@activity.Description</p>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}