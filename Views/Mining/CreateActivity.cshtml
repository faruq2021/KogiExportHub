@model KogiExportHub.Models.MiningActivity
@{
    ViewData["Title"] = "Log Mining Activity";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0"><i class="fas fa-plus-circle"></i> Log Mining Activity</h3>
                    <p class="text-muted mb-0">Record a new mining activity</p>
                </div>
                <div class="card-body">
                    <form asp-action="CreateActivity" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="MinerId" class="form-label">Miner</label>
                                    <select asp-for="MinerId" class="form-select">
                                        <option value="">Select Miner</option>
                                        @if (ViewBag.Miners != null)
                                        {
                                            @foreach (var miner in (List<KogiExportHub.Models.Miner>)ViewBag.Miners)
                                            {
                                                <option value="@miner.Id">@miner.FullName (@miner.LicenseNumber)</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="MinerId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ActivityDate" class="form-label">Activity Date</label>
                                    <input asp-for="ActivityDate" type="date" class="form-control" />
                                    <span asp-validation-for="ActivityDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ActivityType" class="form-label">Activity Type</label>
                                    <select asp-for="ActivityType" class="form-select">
                                        <option value="">Select Activity Type</option>
                                        <option value="Extraction">Extraction</option>
                                        <option value="Processing">Processing</option>
                                        <option value="Transportation">Transportation</option>
                                        <option value="Exploration">Exploration</option>
                                        <option value="Site Preparation">Site Preparation</option>
                                    </select>
                                    <span asp-validation-for="ActivityType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="MineralType" class="form-label">Mineral Type</label>
                                    <select asp-for="MineralType" class="form-select">
                                        <option value="">Select Mineral Type</option>
                                        <option value="Gold">Gold</option>
                                        <option value="Tin">Tin</option>
                                        <option value="Columbite">Columbite</option>
                                        <option value="Tantalite">Tantalite</option>
                                        <option value="Iron Ore">Iron Ore</option>
                                        <option value="Coal">Coal</option>
                                        <option value="Limestone">Limestone</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="MineralType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Quantity" class="form-label">Quantity (kg)</label>
                                    <input asp-for="Quantity" type="number" step="0.01" class="form-control" placeholder="Enter quantity in kg" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="WorkersCount" class="form-label">Workers Count</label>
                                    <input asp-for="WorkersCount" type="number" class="form-control" placeholder="Number of workers" />
                                    <span asp-validation-for="WorkersCount" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ActivityLocation" class="form-label">Activity Location</label>
                            <input asp-for="ActivityLocation" class="form-control" placeholder="Enter specific location" />
                            <span asp-validation-for="ActivityLocation" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="StartTime" class="form-label">Start Time</label>
                                    <input asp-for="StartTime" type="time" class="form-control" />
                                    <span asp-validation-for="StartTime" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="EndTime" class="form-label">End Time</label>
                                    <input asp-for="EndTime" type="time" class="form-control" />
                                    <span asp-validation-for="EndTime" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="EquipmentUsed" class="form-label">Equipment Used</label>
                                    <input asp-for="EquipmentUsed" class="form-control" placeholder="List equipment used" />
                                    <span asp-validation-for="EquipmentUsed" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label">Status</label>
                                    <select asp-for="Status" class="form-select">
                                        <option value="Planned">Planned</option>
                                        <option value="In Progress">In Progress</option>
                                        <option value="Completed" selected>Completed</option>
                                        <option value="Suspended">Suspended</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Additional details about the activity"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Activities")" class="btn btn-outline-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Log Activity
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}