@model KogiExportHub.Models.EnvironmentalCompliance
@{
    ViewData["Title"] = "Create Environmental Compliance Record";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0"><i class="fas fa-leaf"></i> Create Environmental Compliance Record</h3>
                    <p class="text-muted mb-0">Record environmental compliance assessment</p>
                </div>
                <div class="card-body">
                    <form asp-action="CreateCompliance" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="MinerId" class="form-label">Miner</label>
                                    <select asp-for="MinerId" class="form-select">
                                        <option value="">Select Miner</option>
                                        @if (ViewBag.Miners != null)
                                        {
                                            @foreach (var miner in (List<KogiExportHub.Models.Miner>)ViewBag.Miners)
                                            {
                                                <option value="@miner.Id">@miner.FullName (@miner.LicenseNumber)</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="MinerId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ComplianceType" class="form-label">Compliance Type</label>
                                    <select asp-for="ComplianceType" class="form-select">
                                        <option value="">Select Compliance Type</option>
                                        <option value="Environmental Impact Assessment">Environmental Impact Assessment</option>
                                        <option value="Waste Management">Waste Management</option>
                                        <option value="Water Quality">Water Quality</option>
                                        <option value="Air Quality">Air Quality</option>
                                        <option value="Soil Conservation">Soil Conservation</option>
                                        <option value="Noise Control">Noise Control</option>
                                        <option value="Wildlife Protection">Wildlife Protection</option>
                                        <option value="Land Restoration">Land Restoration</option>
                                    </select>
                                    <span asp-validation-for="ComplianceType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="AssessmentDate" class="form-label">Assessment Date</label>
                                    <input asp-for="AssessmentDate" type="date" class="form-control" />
                                    <span asp-validation-for="AssessmentDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="InspectionDate" class="form-label">Inspection Date</label>
                                    <input asp-for="InspectionDate" type="date" class="form-control" />
                                    <span asp-validation-for="InspectionDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ComplianceStatus" class="form-label">Compliance Status</label>
                                    <select asp-for="ComplianceStatus" class="form-select">
                                        <option value="Pending Review">Pending Review</option>
                                        <option value="Compliant">Compliant</option>
                                        <option value="Non-Compliant">Non-Compliant</option>
                                        <option value="Under Investigation">Under Investigation</option>
                                    </select>
                                    <span asp-validation-for="ComplianceStatus" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="InspectorName" class="form-label">Inspector Name</label>
                                    <input asp-for="InspectorName" class="form-control" placeholder="Enter inspector name" />
                                    <span asp-validation-for="InspectorName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Findings" class="form-label">Findings</label>
                            <textarea asp-for="Findings" class="form-control" rows="3" placeholder="Describe inspection findings"></textarea>
                            <span asp-validation-for="Findings" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Recommendations" class="form-label">Recommendations</label>
                            <textarea asp-for="Recommendations" class="form-control" rows="3" placeholder="Provide recommendations"></textarea>
                            <span asp-validation-for="Recommendations" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="CorrectiveActions" class="form-label">Corrective Actions Required</label>
                            <textarea asp-for="CorrectiveActions" class="form-control" rows="3" placeholder="List required corrective actions"></textarea>
                            <span asp-validation-for="CorrectiveActions" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CorrectionDueDate" class="form-label">Due Date for Corrections</label>
                                    <input asp-for="CorrectionDueDate" type="date" class="form-control" />
                                    <span asp-validation-for="CorrectionDueDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FollowUpDate" class="form-label">Follow-up Date</label>
                                    <input asp-for="FollowUpDate" type="date" class="form-control" />
                                    <span asp-validation-for="FollowUpDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CertificateNumber" class="form-label">Certificate Number</label>
                                    <input asp-for="CertificateNumber" class="form-control" placeholder="Enter certificate number" />
                                    <span asp-validation-for="CertificateNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CertificateExpiry" class="form-label">Certificate Expiry</label>
                                    <input asp-for="CertificateExpiry" type="date" class="form-control" />
                                    <span asp-validation-for="CertificateExpiry" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FineAmount" class="form-label">Fine Amount (â‚¦)</label>
                                    <input asp-for="FineAmount" type="number" step="0.01" class="form-control" placeholder="Enter fine amount" />
                                    <span asp-validation-for="FineAmount" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FineStatus" class="form-label">Fine Status</label>
                                    <select asp-for="FineStatus" class="form-select">
                                        <option value="">Select Fine Status</option>
                                        <option value="Pending">Pending</option>
                                        <option value="Paid">Paid</option>
                                        <option value="Waived">Waived</option>
                                    </select>
                                    <span asp-validation-for="FineStatus" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Additional notes or comments"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Compliance")" class="btn btn-outline-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Create Record
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}