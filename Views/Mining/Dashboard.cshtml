@model MiningDashboardViewModel
@{
    ViewData["Title"] = "Mining Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-hard-hat"></i> Artisanal Mining Dashboard</h2>
                <div>
                    <a href="@Url.Action("CreateMiner")" class="btn btn-primary me-2">
                        <i class="fas fa-user-plus"></i> Register New Miner
                    </a>
                    <a href="@Url.Action("CreateActivity")" class="btn btn-success me-2">
                        <i class="fas fa-plus"></i> Log Activity
                    </a>
                    <a href="@Url.Action("CreateCompliance")" class="btn btn-warning">
                        <i class="fas fa-leaf"></i> Add Compliance Record
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.TotalMiners</h4>
                            <p class="mb-0">Total Miners</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.ActiveLicenses</h4>
                            <p class="mb-0">Active Licenses</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-certificate fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.PendingLicenses</h4>
                            <p class="mb-0">Pending Licenses</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.ComplianceIssues</h4>
                            <p class="mb-0">Compliance Issues</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-users"></i> Miner Management</h5>
                </div>
                <div class="card-body">
                    <p>Manage miner registrations and licenses</p>
                    <a href="@Url.Action("Index")" class="btn btn-outline-primary">View All Miners</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-clipboard-list"></i> Mining Activities</h5>
                </div>
                <div class="card-body">
                    <p>Track and monitor mining activities</p>
                    <a href="@Url.Action("Activities")" class="btn btn-outline-success">View Activities</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-leaf"></i> Environmental Compliance</h5>
                </div>
                <div class="card-body">
                    <p>Monitor environmental compliance</p>
                    <a href="@Url.Action("Compliance")" class="btn btn-outline-warning">View Compliance</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activities -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-history"></i> Recent Mining Activities</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentActivities.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Miner</th>
                                        <th>Activity Type</th>
                                        <th>Mineral</th>
                                        <th>Quantity (kg)</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var activity in Model.RecentActivities)
                                    {
                                        <tr>
                                            <td>@activity.ActivityDate.ToString("MMM dd, yyyy")</td>
                                            <td>@activity.Miner.FullName</td>
                                            <td>@activity.ActivityType</td>
                                            <td>@activity.MineralType</td>
                                            <td>@activity.Quantity.ToString("N2")</td>
                                            <td>
                                                <span class="badge bg-@(activity.Status == "Completed" ? "success" : activity.Status == "In Progress" ? "warning" : "secondary")">@activity.Status</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No recent activities found.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>