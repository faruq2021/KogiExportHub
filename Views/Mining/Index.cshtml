@model IEnumerable<KogiExportHub.Models.Miner>
@{
    ViewData["Title"] = "Registered Miners";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-users"></i> Registered Miners</h2>
                <div>
                    <a href="@Url.Action("Dashboard")" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                    <a href="@Url.Action("CreateMiner")" class="btn btn-primary">
                        <i class="fas fa-user-plus"></i> Register New Miner
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>License Number</th>
                                        <th>Full Name</th>
                                        <th>Mining Type</th>
                                        <th>Location</th>
                                        <th>License Status</th>
                                        <th>Registration Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var miner in Model)
                                    {
                                        <tr>
                                            <td><strong>@miner.LicenseNumber</strong></td>
                                            <td>@miner.FullName</td>
                                            <td>@miner.MiningType</td>
                                            <td>@(miner.Location?.Name ?? "Not specified")</td>
                                            <td>
                                                <span class="badge bg-@(miner.LicenseStatus == "Active" ? "success" : miner.LicenseStatus == "Pending" ? "warning" : miner.LicenseStatus == "Expired" ? "danger" : "secondary")">@miner.LicenseStatus</span>
                                            </td>
                                            <td>@miner.RegistrationDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("MinerDetails", new { id = miner.Id })" class="btn btn-sm btn-outline-primary" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("EditMiner", new { id = miner.Id })" class="btn btn-sm btn-outline-warning" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No miners registered yet</h4>
                            <p class="text-muted">Start by registering your first miner.</p>
                            <a href="@Url.Action("CreateMiner")" class="btn btn-primary">
                                <i class="fas fa-user-plus"></i> Register First Miner
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>