@model IEnumerable<KogiExportHub.Models.Product>
@{
    ViewData["Title"] = "Marketplace";
    var categories = ViewBag.Categories as IEnumerable<KogiExportHub.Models.ProductCategory>;
    var selectedCategoryId = ViewBag.SelectedCategoryId as int?;
}

<div class="container">
    <div class="row mb-3">
        <div class="col-md-9 col-sm-8 col-7">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="col-md-3 col-sm-4 col-5 text-end">
            <a asp-action="AddProduct" class="btn btn-success">Add New Product</a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <form asp-action="ProductList" method="get" class="row gx-2 gy-2 align-items-center">
                <div class="col-md-4 col-sm-12">
                    <div class="input-group mb-2 mb-md-0">
                        <input type="text" name="searchString" class="form-control" placeholder="Search products..." value="@ViewBag.CurrentFilter">
                        <button type="submit" class="btn btn-outline-secondary">Search</button>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <select name="categoryId" id="categoryId" class="form-select mb-2 mb-md-0">
                        <option value="">All Categories</option>
                        @if (categories != null)
                        {
                            foreach (var category in categories)
                            {
                                <option value="@category.Id" selected="@(category.Id == selectedCategoryId)">@category.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3 col-sm-6">
                    <select name="sortOrder" id="sortOrder" class="form-select mb-2 mb-md-0">
                        <option value="">Sort by Name (A-Z)</option>
                        <option value="name_desc" selected="@(ViewBag.CurrentSort == "name_desc")">Sort by Name (Z-A)</option>
                        <option value="price_asc" selected="@(ViewBag.CurrentSort == "price_asc")">Sort by Price (Low-High)</option>
                        <option value="price_desc" selected="@(ViewBag.CurrentSort == "price_desc")">Sort by Price (High-Low)</option>
                        <option value="date" selected="@(ViewBag.CurrentSort == "date")">Sort by Oldest</option>
                        <option value="date_desc" selected="@(ViewBag.CurrentSort == "date_desc")">Sort by Newest</option>
                    </select>
                </div>
                <div class="col-md-2 col-sm-12">
                    <button type="submit" class="btn btn-primary w-100">Apply</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12">
                <p>No products found. @(selectedCategoryId.HasValue ? "Try a different category or show all products." : "Why not add one?")</p>
            </div>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-6 mb-4">
                    <div class="card h-100">
                        <a asp-action="ProductDetails" asp-route-id="@item.Id">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="~/@item.ImageUrl.Replace("\\", "/")" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <img src="~/images/placeholder.png" class="card-img-top" alt="No Image Available" style="height: 200px; object-fit: cover;">
                            }
                        </a>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><a asp-action="ProductDetails" asp-route-id="@item.Id" class="text-decoration-none">@item.Name</a></h5>
                            <p class="card-text">@item.Description?.Substring(0, Math.Min(item.Description.Length, 100))@((item.Description?.Length ?? 0) > 100 ? "..." : "")</p>
                            <!-- In the product card -->
                            <p class="card-text"><strong>Price:</strong> â‚¦@item.Price.ToString("N2") per @item.Unit</p>
                            <p class="card-text"><small class="text-muted">Quantity: @item.Quantity @item.Unit@(item.Quantity != 1 ? "s" : "")</small></p>
                            <p class="card-text"><small class="text-muted">Category: @item.Category?.Name</small></p>
                            @if (item.Seller != null)
                            {
                                <p class="card-text"><small class="text-muted">Seller: 
                                @{
                                    if (string.IsNullOrWhiteSpace(item.Seller.FirstName) && string.IsNullOrWhiteSpace(item.Seller.LastName))
                                    {
                                        @(item.Seller.User?.UserName ?? "Unknown")
                                    }
                                    else
                                    {
                                        @((item.Seller.FirstName + " " + item.Seller.LastName).Trim())
                                    }
                                }
                                </small></p>
                            }
                            else
                            {
                                <p class="card-text"><small class="text-muted">Seller: Not Available</small></p>
                            }
                            <div class="mt-auto">
                                <a asp-action="ProductDetails" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                                <!-- Add to cart/buy button can go here -->
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>