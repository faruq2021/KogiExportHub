@model IEnumerable<KogiExportHub.Models.FundingRequest>

@{
    ViewData["Title"] = "Admin Funding Review - Pending Requests";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-cash-stack"></i> Funding Request Review</h1>
        <div>
            <a asp-action="AdminReview" class="btn btn-outline-secondary me-2">
                <i class="bi bi-file-earmark-check"></i> Proposal Review
            </a>
            <a asp-action="FundingRequests" class="btn btn-outline-primary">
                <i class="bi bi-list"></i> All Funding Requests
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> No funding requests are currently awaiting review.
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle"></i> <strong>@Model.Count()</strong> funding request(s) awaiting your review.
        </div>

        <div class="row">
            @foreach (var request in Model)
            {
                var totalContributed = request.Contributions?.Where(c => c.Status == "Completed").Sum(c => c.Amount) ?? 0;
                var fundingProgress = request.AmountRequested > 0 ? (totalContributed / request.AmountRequested) * 100 : 0;
                
                <div class="col-12 mb-4">
                    <div class="card border-warning">
                        <div class="card-header bg-warning text-dark">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h5 class="mb-0">@request.Proposal.Title</h5>
                                    <small class="text-muted">
                                        <i class="bi bi-geo-alt"></i> @request.Proposal.Location.Name |
                                        <i class="bi bi-tag"></i> @request.Proposal.Category.Name
                                    </small>
                                </div>
                                <div class="col-md-4 text-end">
                                    <span class="badge bg-secondary fs-6">@request.Status</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6>Request Details</h6>
                                    <table class="table table-sm">
                                        <tr>
                                            <td><strong>Amount Requested:</strong></td>
                                            <td>共request.AmountRequested.ToString("N2")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Funding Type:</strong></td>
                                            <td>@request.FundingType</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Requester:</strong></td>
                                            <td>@(request.Requester.FirstName + " " + request.Requester.LastName)</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Submission Date:</strong></td>
                                            <td>@request.SubmissionDate.ToString("MMM dd, yyyy")</td>
                                        </tr>
                                        @if (request.FundingType == "Loan")
                                        {
                                            <tr>
                                                <td><strong>Interest Rate:</strong></td>
                                                <td>@(request.InterestRate?.ToString("P2") ?? "N/A")</td>
                                            </tr>
                                            <tr>
                                                <td><strong>Repayment Term:</strong></td>
                                                <td>@(request.RepaymentTermMonths?.ToString() ?? "N/A") months</td>
                                            </tr>
                                        }
                                        @if (request.FundingType == "Investment")
                                        {
                                            <tr>
                                                <td><strong>Equity Percentage:</strong></td>
                                                <td>@(request.EquityPercentage?.ToString("P2") ?? "N/A")</td>
                                            </tr>
                                        }
                                        @if (request.IsShariaCompliant)
                                        {
                                            <tr>
                                                <td><strong>Sharia Compliant:</strong></td>
                                                <td><i class="bi bi-check-circle text-success"></i> Yes</td>
                                            </tr>
                                            @if (!string.IsNullOrEmpty(request.ProfitSharingTerms))
                                            {
                                                <tr>
                                                    <td><strong>Profit Sharing:</strong></td>
                                                    <td>@request.ProfitSharingTerms</td>
                                                </tr>
                                            }
                                        }
                                    </table>
                                </div>
                                <div class="col-md-6">
                                    <h6>Current Funding Status</h6>
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between">
                                            <span>Community Contributions</span>
                                            <span>共totalContributed.ToString("N2")</span>
                                        </div>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar" role="progressbar" style="width: @fundingProgress%" aria-valuenow="@fundingProgress" aria-valuemin="0" aria-valuemax="100">
                                                @fundingProgress.ToString("F1")%
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <h6>Proposal Summary</h6>
                                    <p class="text-muted">@(request.Proposal.Description?.Length > 150 ? request.Proposal.Description.Substring(0, 150) + "..." : request.Proposal.Description)</p>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-md-6">
                                    <a asp-action="FundingRequestDetails" asp-route-id="@request.Id" class="btn btn-outline-info btn-sm me-2">
                                        <i class="bi bi-eye"></i> View Details
                                    </a>
                                    <a asp-action="ProposalDetails" asp-route-id="@request.ProposalId" class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-file-earmark"></i> View Proposal
                                    </a>
                                </div>
                                <div class="col-md-6 text-end">
                                    <button type="button" class="btn btn-success btn-sm me-2" data-bs-toggle="modal" data-bs-target="#approveModal@(request.Id)">
                                        <i class="bi bi-check-circle"></i> Approve
                                    </button>
                                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#rejectModal@(request.Id)">
                                        <i class="bi bi-x-circle"></i> Reject
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Approve Modal -->
                <div class="modal fade" id="approveModal@(request.Id)" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form asp-action="ApproveFunding" method="post">
                                <input type="hidden" name="id" value="@request.Id" />
                                <div class="modal-header">
                                    <h5 class="modal-title">Approve Funding Request</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <p><strong>Proposal:</strong> @request.Proposal.Title</p>
                                    <p><strong>Requested Amount:</strong> 共request.AmountRequested.ToString("N2")</p>
                                    
                                    <div class="mb-3">
                                        <label for="amountApproved@(request.Id)" class="form-label">Amount to Approve</label>
                                        <input type="number" class="form-control" id="amountApproved@(request.Id)" name="amountApproved" 
                                               value="@request.AmountRequested" step="0.01" min="0" max="@request.AmountRequested" />
                                        <div class="form-text">Leave blank to approve full requested amount</div>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="adminComments@(request.Id)" class="form-label">Admin Comments (Optional)</label>
                                        <textarea class="form-control" id="adminComments@(request.Id)" name="adminComments" rows="3" 
                                                  placeholder="Add any comments or conditions for this approval..."></textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-check-circle"></i> Approve Funding
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Reject Modal -->
                <div class="modal fade" id="rejectModal@(request.Id)" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form asp-action="RejectFunding" method="post">
                                <input type="hidden" name="id" value="@request.Id" />
                                <div class="modal-header">
                                    <h5 class="modal-title">Reject Funding Request</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <p><strong>Proposal:</strong> @request.Proposal.Title</p>
                                    <p><strong>Requested Amount:</strong> 共request.AmountRequested.ToString("N2")</p>
                                    
                                    <div class="mb-3">
                                        <label for="rejectionReason@(request.Id)" class="form-label">Reason for Rejection <span class="text-danger">*</span></label>
                                        <textarea class="form-control" id="rejectionReason@(request.Id)" name="rejectionReason" rows="4" 
                                                  placeholder="Please provide a clear reason for rejecting this funding request..." required></textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-x-circle"></i> Reject Funding
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>