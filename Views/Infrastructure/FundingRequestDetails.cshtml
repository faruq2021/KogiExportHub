@model KogiExportHub.Models.FundingRequest
@{
    ViewData["Title"] = "Funding Request Details";
    var totalContributed = Model.Contributions?.Where(c => c.Status == "Completed").Sum(c => c.Amount) ?? 0;
    var fundingProgress = Model.AmountRequested > 0 ? (totalContributed / Model.AmountRequested) * 100 : 0;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Proposals">Infrastructure Proposals</a></li>
            <li class="breadcrumb-item"><a asp-action="ProposalDetails" asp-route-id="@Model.ProposalId">@Model.Proposal.Title</a></li>
            <li class="breadcrumb-item active" aria-current="page">Funding Request</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Funding Request Details</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Status</div>
                        <div class="col-md-8">
                            @switch (Model.Status)
                            {
                                case "Pending":
                                    <span class="badge bg-secondary">Pending</span>
                                    break;
                                case "Approved":
                                    <span class="badge bg-success">Approved</span>
                                    break;
                                case "Rejected":
                                    <span class="badge bg-danger">Rejected</span>
                                    break;
                                case "Funded":
                                    <span class="badge bg-primary">Funded</span>
                                    break;
                                case "Completed":
                                    <span class="badge bg-info">Completed</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@Model.Status</span>
                                    break;
                            }
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Amount Requested</div>
                        <div class="col-md-8">₦@Model.AmountRequested.ToString("N2")</div>
                    </div>
                    @if (Model.AmountApproved.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold">Amount Approved</div>
                            <div class="col-md-8">₦@Model.AmountApproved.Value.ToString("N2")</div>
                        </div>
                    }
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Funding Type</div>
                        <div class="col-md-8">@Model.FundingType</div>
                    </div>
                    @if (Model.InterestRate.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold">Interest Rate</div>
                            <div class="col-md-8">@Model.InterestRate.Value.ToString("N2")%</div>
                        </div>
                    }
                    @if (Model.EquityPercentage.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold">Equity Percentage</div>
                            <div class="col-md-8">@Model.EquityPercentage.Value.ToString("N2")%</div>
                        </div>
                    }
                    @if (Model.RepaymentTermMonths.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold">Repayment Term</div>
                            <div class="col-md-8">@Model.RepaymentTermMonths.Value months</div>
                        </div>
                    }
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Sharia Compliant</div>
                        <div class="col-md-8">@(Model.IsShariaCompliant ? "Yes" : "No")</div>
                    </div>
                    @if (Model.IsShariaCompliant && !string.IsNullOrEmpty(Model.ProfitSharingTerms))
                    {
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold">Profit Sharing Terms</div>
                            <div class="col-md-8">@Model.ProfitSharingTerms</div>
                        </div>
                    }
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Requester</div>
                        <div class="col-md-8">@Model.Requester.FirstName @Model.Requester.LastName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Submission Date</div>
                        <div class="col-md-8">@Model.SubmissionDate.ToString("MMM dd, yyyy")</div>
                    </div>
                    @if (Model.ApprovalDate.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold">Approval Date</div>
                            <div class="col-md-8">@Model.ApprovalDate.Value.ToString("MMM dd, yyyy")</div>
                        </div>
                    }
                    @if (Model.FundingDate.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold">Funding Date</div>
                            <div class="col-md-8">@Model.FundingDate.Value.ToString("MMM dd, yyyy")</div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.RejectionReason))
                    {
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold">Rejection Reason</div>
                            <div class="col-md-8">@Model.RejectionReason</div>
                        </div>
                    }
                </div>
            </div>

            @if (Model.Status == "Approved" || Model.Status == "Funded")
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Funding Progress</h5>
                    </div>
                    <div class="card-body">
                        <div class="progress mb-3" style="height: 25px;">
                            <div class="progress-bar @(fundingProgress >= 100 ? "bg-success" : "bg-primary")" role="progressbar" style="width: @(Math.Min(fundingProgress, 100))%;" aria-valuenow="@fundingProgress" aria-valuemin="0" aria-valuemax="100">@fundingProgress.ToString("N0")%</div>
                        </div>
                        <p class="text-center">₦@totalContributed.ToString("N2") of ₦@Model.AmountRequested.ToString("N2")</p>

                        @if (Model.Status == "Approved" && fundingProgress < 100)
                        {
                            <form asp-action="ContributeToFunding" method="post" class="mt-4">
                                <input type="hidden" name="fundingRequestId" value="@Model.Id" />
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="input-group">
                                            <span class="input-group-text">₦</span>
                                            <input type="number" name="amount" class="form-control" placeholder="Enter amount" step="0.01" min="1" required />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <button type="submit" class="btn btn-success w-100">
                                            <i class="bi bi-cash-coin"></i> Contribute
                                        </button>
                                    </div>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            }

            @if (Model.Contributions != null && Model.Contributions.Any())
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Contributions</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Contributor</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var contribution in Model.Contributions.OrderByDescending(c => c.ContributionDate))
                                    {
                                        <tr>
                                            <td>@contribution.Contributor.FirstName @contribution.Contributor.LastName</td>
                                            <td>₦@contribution.Amount.ToString("N2")</td>
                                            <td>
                                                @switch (contribution.Status)
                                                {
                                                    case "Pending":
                                                        <span class="badge bg-secondary">Pending</span>
                                                        break;
                                                    case "Completed":
                                                        <span class="badge bg-success">Completed</span>
                                                        break;
                                                    case "Refunded":
                                                        <span class="badge bg-warning text-dark">Refunded</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@contribution.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@contribution.ContributionDate.ToString("MMM dd, yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Proposal Summary</h5>
                </div>
                <div class="card-body">
                    <h6>@Model.Proposal.Title</h6>
                    <p class="text-muted">@Model.Proposal.Category.Name | @Model.Proposal.Location.Name</p>
                    <hr />
                    <p><strong>Estimated Cost:</strong> ₦@Model.Proposal.EstimatedCost.ToString("N2")</p>
                    <p><strong>Timeline:</strong> @Model.Proposal.ExpectedTimelineMonths months</p>
                    <p><strong>Beneficiaries:</strong> @Model.Proposal.ExpectedBeneficiaries people</p>
                    <a asp-action="ProposalDetails" asp-route-id="@Model.ProposalId" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-arrow-left"></i> Back to Proposal
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>