@model IEnumerable<KogiExportHub.Models.InfrastructureProposal>

@{
    ViewData["Title"] = "Admin Review - Submitted Proposals";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-shield-check"></i> Admin Review</h1>
        <a asp-action="Proposals" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to All Proposals
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> No proposals are currently awaiting review.
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle"></i> <strong>@Model.Count()</strong> proposal(s) awaiting your review.
        </div>

        <div class="row">
            @foreach (var proposal in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 border-warning">
                        <div class="card-header bg-warning text-dark">
                            <h6 class="mb-0">@proposal.Category.Name</h6>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@proposal.Title</h5>
                            <p class="card-text text-muted small mb-2">
                                <i class="bi bi-geo-alt"></i> @proposal.Location.Name
                            </p>
                            <p class="card-text flex-grow-1">@(proposal.Description?.Length > 100 ? proposal.Description.Substring(0, 100) + "..." : proposal.Description)</p>
                            
                            <div class="mb-3">
                                <div class="row text-center">
                                    <div class="col-6">
                                        <small class="text-muted">Estimated Cost</small>
                                        <div class="fw-bold">â‚¦@proposal.EstimatedCost.ToString("N0")</div>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted">Timeline</small>
                                        <div class="fw-bold">@proposal.ExpectedTimelineMonths mo</div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <small class="text-muted">Submitted by: @proposal.Proposer.FirstName @proposal.Proposer.LastName</small><br>
                                <small class="text-muted">Date: @proposal.SubmissionDate.ToString("MMM dd, yyyy")</small>
                            </div>
                            
                            <div class="mt-auto">
                                <div class="btn-group w-100 mb-2">
                                    <a asp-action="ProposalDetails" asp-route-id="@proposal.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> Review
                                    </a>
                                </div>
                                <div class="btn-group w-100">
                                    <form asp-action="ApproveProposal" asp-route-id="@proposal.Id" method="post" class="flex-fill me-1">
                                        <button type="submit" class="btn btn-success btn-sm w-100" onclick="return confirm('Approve this proposal?')">
                                            <i class="bi bi-check-circle"></i> Approve
                                        </button>
                                    </form>
                                    <button type="button" class="btn btn-danger btn-sm flex-fill" data-bs-toggle="modal" data-bs-target="#rejectModal@(proposal.Id)">
                                        <i class="bi bi-x-circle"></i> Reject
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Individual Rejection Modal for each proposal -->
                    <div class="modal fade" id="rejectModal@(proposal.Id)" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Reject: @proposal.Title</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <form asp-action="RejectProposal" asp-route-id="@proposal.Id" method="post">
                                    <div class="modal-body">
                                        <div class="mb-3">
                                            <label class="form-label">Rejection Reason</label>
                                            <textarea class="form-control" name="rejectionReason" rows="3" placeholder="Please provide a reason for rejection..." required></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Reject Proposal</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>