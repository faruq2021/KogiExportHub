@model KogiExportHub.Models.InfrastructureProposal
@{
    ViewData["Title"] = "Proposal Details";
    var canEdit = (User.IsInRole("Admin") || (User.IsInRole("Seller") && Model.ProposerId.ToString() == User.FindFirst("ProfileId")?.Value)) && Model.Status == "Draft";
    var canSubmit = (User.IsInRole("Admin") || (User.IsInRole("Seller") && Model.ProposerId.ToString() == User.FindFirst("ProfileId")?.Value)) && Model.Status == "Draft";
    var canCreateFundingRequest = User.Identity.IsAuthenticated && Model.Status == "Approved" && !Model.FundingRequests.Any(fr => fr.Status != "Rejected");
    var canApprove = User.IsInRole("Admin") && Model.Status == "Submitted";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Proposals">Infrastructure Proposals</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    <div class="row mb-4">
        <div class="col-md-8">
            <h1>@Model.Title</h1>
        </div>
        <div class="col-md-4 text-md-end">
            <div class="btn-group">
                @if (canEdit)
                {
                    <a asp-action="EditProposal" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                }
                @if (canSubmit)
                {
                    <form asp-action="SubmitProposal" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to submit this proposal? You won\'t be able to edit it after submission.')">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send"></i> Submit Proposal
                        </button>
                    </form>
                }
                @if (canCreateFundingRequest)
                {
                    <a asp-action="CreateFundingRequest" asp-route-proposalId="@Model.Id" class="btn btn-success">
                        <i class="bi bi-cash-coin"></i> Request Funding
                    </a>
                }
            </div>
            
            @* Admin Approval Section *@
            @if (canApprove)
            {
                <div class="mt-3">
                    <div class="card border-warning">
                        <div class="card-header bg-warning text-dark">
                            <h6 class="mb-0"><i class="bi bi-shield-check"></i> Admin Review Required</h6>
                        </div>
                        <div class="card-body">
                            <p class="mb-3">This proposal is awaiting admin approval.</p>
                            <div class="btn-group w-100">
                                <form asp-action="ApproveProposal" asp-route-id="@Model.Id" method="post" class="flex-fill me-2">
                                    <button type="submit" class="btn btn-success w-100" onclick="return confirm('Are you sure you want to approve this proposal?')">
                                        <i class="bi bi-check-circle"></i> Approve
                                    </button>
                                </form>
                                <button type="button" class="btn btn-danger flex-fill" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                    <i class="bi bi-x-circle"></i> Reject
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    @* Add Rejection Modal at the end of the file, before closing </div> *@
    @if (canApprove)
    {
        <!-- Rejection Modal -->
        <div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="rejectModalLabel">Reject Proposal</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form asp-action="RejectProposal" asp-route-id="@Model.Id" method="post">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="rejectionReason" class="form-label">Rejection Reason</label>
                                <textarea class="form-control" id="rejectionReason" name="rejectionReason" rows="3" placeholder="Please provide a reason for rejection..."></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">Reject Proposal</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Proposal Details</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Status</div>
                        <div class="col-md-8">
                            @switch (Model.Status)
                            {
                                case "Draft":
                                    <span class="badge bg-secondary">Draft</span>
                                    break;
                                case "Submitted":
                                    <span class="badge bg-info">Submitted</span>
                                    break;
                                case "UnderReview":
                                    <span class="badge bg-warning text-dark">Under Review</span>
                                    break;
                                case "Approved":
                                    <span class="badge bg-success">Approved</span>
                                    break;
                                case "Rejected":
                                    <span class="badge bg-danger">Rejected</span>
                                    break;
                                case "Funded":
                                    <span class="badge bg-primary">Funded</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@Model.Status</span>
                                    break;
                            }
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Category</div>
                        <div class="col-md-8">@Model.Category.Name</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Location</div>
                        <div class="col-md-8">@Model.Location.Name</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Estimated Cost</div>
                        <div class="col-md-8">₦@Model.EstimatedCost.ToString("N2")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Expected Timeline</div>
                        <div class="col-md-8">@Model.ExpectedTimelineMonths months</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Expected Beneficiaries</div>
                        <div class="col-md-8">@Model.ExpectedBeneficiaries people</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Proposer</div>
                        <div class="col-md-8">@Model.Proposer.FirstName @Model.Proposer.LastName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Submission Date</div>
                        <div class="col-md-8">@(Model.SubmissionDate != default ? Model.SubmissionDate.ToString("MMM dd, yyyy") : "Not submitted")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Approval Date</div>
                        <div class="col-md-8">@(Model.ApprovalDate.HasValue ? Model.ApprovalDate.Value.ToString("MMM dd, yyyy") : "Not approved")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Documentation</div>
                        <div class="col-md-8">
                            @if (!string.IsNullOrEmpty(Model.DocumentationUrl))
                            {
                                <a href="@Model.DocumentationUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-file-earmark-text"></i> View Documentation
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">No documentation uploaded</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Description</h5>
                </div>
                <div class="card-body">
                    <p>@Model.Description</p>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Expected Impact</h5>
                </div>
                <div class="card-body">
                    <p>@Model.ExpectedImpact</p>
                </div>
            </div>

            @if (Model.Milestones != null && Model.Milestones.Any())
            {
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Project Milestones</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Status</th>
                                        <th>Target Date</th>
                                        <th>Funding Allocation</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var milestone in Model.Milestones)
                                    {
                                        <tr>
                                            <td>@milestone.Title</td>
                                            <td>
                                                @switch (milestone.Status)
                                                {
                                                    case "Pending":
                                                        <span class="badge bg-secondary">Pending</span>
                                                        break;
                                                    case "InProgress":
                                                        <span class="badge bg-info">In Progress</span>
                                                        break;
                                                    case "Completed":
                                                        <span class="badge bg-success">Completed</span>
                                                        break;
                                                    case "Delayed":
                                                        <span class="badge bg-warning text-dark">Delayed</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@milestone.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@(milestone.TargetCompletionDate.HasValue ? milestone.TargetCompletionDate.Value.ToString("MMM dd, yyyy") : "Not set")</td>
                                            <td>@(milestone.FundingAllocation.HasValue ? $"₦{milestone.FundingAllocation.Value.ToString("N2")}" : "Not allocated")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            @if (Model.FundingRequests != null && Model.FundingRequests.Any())
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Funding Requests</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var fundingRequest in Model.FundingRequests)
                        {
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h6 class="card-title">@fundingRequest.FundingType Funding</h6>
                                    <p class="card-text">
                                        <strong>Amount:</strong> ₦@fundingRequest.AmountRequested.ToString("N2")<br />
                                        <strong>Status:</strong>
                                        @switch (fundingRequest.Status)
                                        {
                                            case "Pending":
                                                <span class="badge bg-secondary">Pending</span>
                                                break;
                                            case "Approved":
                                                <span class="badge bg-success">Approved</span>
                                                break;
                                            case "Rejected":
                                                <span class="badge bg-danger">Rejected</span>
                                                break;
                                            case "Funded":
                                                <span class="badge bg-primary">Funded</span>
                                                break;
                                            case "Completed":
                                                <span class="badge bg-info">Completed</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@fundingRequest.Status</span>
                                                break;
                                        }
                                        <br />
                                        <strong>Date:</strong> @fundingRequest.SubmissionDate.ToString("MMM dd, yyyy")
                                    </p>
                                    <a asp-action="FundingRequestDetails" asp-route-id="@fundingRequest.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View Details
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>