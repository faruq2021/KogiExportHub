@model IEnumerable<KogiExportHub.Models.InfrastructureProposal>
@{
    ViewData["Title"] = "Infrastructure Proposals";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Infrastructure Proposals</h1>
        @if (User.IsInRole("Admin") || User.IsInRole("Seller"))
        {
            <a asp-action="CreateProposal" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Proposal
            </a>
        }
    </div>

    <div class="card">
        <div class="card-header bg-light">
            <div class="row">
                <div class="col-md-6">
                    <form method="get" class="d-flex">
                        <select name="status" class="form-select me-2" onchange="this.form.submit()">
                            <option value="">All Statuses</option>
                            <option value="Draft" selected="@(ViewContext.HttpContext.Request.Query["status"] == "Draft")">Draft</option>
                            <option value="Submitted" selected="@(ViewContext.HttpContext.Request.Query["status"] == "Submitted")">Submitted</option>
                            <option value="UnderReview" selected="@(ViewContext.HttpContext.Request.Query["status"] == "UnderReview")">Under Review</option>
                            <option value="Approved" selected="@(ViewContext.HttpContext.Request.Query["status"] == "Approved")">Approved</option>
                            <option value="Rejected" selected="@(ViewContext.HttpContext.Request.Query["status"] == "Rejected")">Rejected</option>
                            <option value="Funded" selected="@(ViewContext.HttpContext.Request.Query["status"] == "Funded")">Funded</option>
                        </select>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Category</th>
                                <th>Location</th>
                                <th>Estimated Cost</th>
                                <th>Status</th>
                                <th>Submission Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var proposal in Model)
                            {
                                <tr>
                                    <td>@proposal.Title</td>
                                    <td>@proposal.Category.Name</td>
                                    <td>@proposal.Location.Name</td>
                                    <td>â‚¦@proposal.EstimatedCost.ToString("N2")</td>
                                    <td>
                                        @switch (proposal.Status)
                                        {
                                            case "Draft":
                                                <span class="badge bg-secondary">Draft</span>
                                                break;
                                            case "Submitted":
                                                <span class="badge bg-info">Submitted</span>
                                                break;
                                            case "UnderReview":
                                                <span class="badge bg-warning text-dark">Under Review</span>
                                                break;
                                            case "Approved":
                                                <span class="badge bg-success">Approved</span>
                                                break;
                                            case "Rejected":
                                                <span class="badge bg-danger">Rejected</span>
                                                break;
                                            case "Funded":
                                                <span class="badge bg-primary">Funded</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@proposal.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>@(proposal.SubmissionDate != default ? proposal.SubmissionDate.ToString("MMM dd, yyyy") : "Not submitted")</td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="ProposalDetails" asp-route-id="@proposal.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                            @if ((User.IsInRole("Admin") || (User.IsInRole("Seller") && proposal.ProposerId.ToString() == User.FindFirst("ProfileId")?.Value)) && proposal.Status == "Draft")
                                            {
                                                <a asp-action="EditProposal" asp-route-id="@proposal.Id" class="btn btn-sm btn-outline-secondary">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-clipboard-x" style="font-size: 3rem;"></i>
                    <h4 class="mt-3">No proposals found</h4>
                    <p class="text-muted">No infrastructure proposals match your criteria.</p>
                    @if (User.IsInRole("Admin") || User.IsInRole("Seller"))
                    {
                        <a asp-action="CreateProposal" class="btn btn-primary mt-2">
                            <i class="bi bi-plus-circle"></i> Create New Proposal
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>