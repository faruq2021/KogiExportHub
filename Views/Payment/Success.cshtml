@{
    ViewData["Title"] = "Payment Successful";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-success">
                <div class="card-header bg-success text-white text-center">
                    <h4><i class="fas fa-check-circle"></i> Payment Successful!</h4>
                </div>
                <div class="card-body text-center">
                    <p class="lead">Thank you for your purchase!</p>
                    <p>Your order has been processed successfully and you will receive a confirmation email shortly.</p>
                    
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    
                    <div class="mt-4">
                        <a asp-controller="Transaction" asp-action="History" class="btn btn-primary me-2">View Orders</a>
                        <a asp-controller="Marketplace" asp-action="ProductList" class="btn btn-outline-secondary">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>