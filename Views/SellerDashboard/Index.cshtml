@model KogiExportHub.Models.SellerDashboardViewModel
@{
    ViewData["Title"] = "Seller Dashboard";
}

<div class="container mt-4">
    <h1>Seller Dashboard</h1>
    <hr />

    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 col-12 mb-3 mb-md-0">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Products</h5>
                    <h2>@Model.TotalProducts</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 col-12 mb-3 mb-md-0">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Sales</h5>
                    <h2>₦@Model.TotalSales.ToString("N2")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 col-12 mb-3 mb-md-0">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title">Pending Orders</h5>
                    <h2>@Model.PendingOrders</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 col-12 mb-3 mb-md-0">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Monthly Earnings</h5>
                    <h2>₦@Model.MonthlyEarnings.ToString("N2")</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Transactions</h5>
                    <a asp-action="Sales" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body">
                    @if (Model.RecentTransactions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-stack-mobile">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Product</th>
                                        <th>Buyer</th>
                                        <th>Quantity</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var transaction in Model.RecentTransactions)
                                    {
                                        <tr>
                                            <td data-label="ID">@transaction.Id</td>
                                            <td data-label="Product">@transaction.Product.Name</td>
                                            <td data-label="Buyer">@transaction.Buyer.FirstName @transaction.Buyer.LastName</td>
                                            <td data-label="Quantity">@transaction.Quantity</td>
                                            <td data-label="Amount">₦@transaction.TotalAmount.ToString("N2")</td>
                                            <td data-label="Status">
                                                @if (transaction.Status == "Completed")
                                                {
                                                    <span class="badge bg-success">Completed</span>
                                                }
                                                else if (transaction.Status == "Pending")
                                                {
                                                    <span class="badge bg-warning text-dark">Pending</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@transaction.Status</span>
                                                }
                                            </td>
                                            <td data-label="Date">@transaction.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-center my-4">No transactions found.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>