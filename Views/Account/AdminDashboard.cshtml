@model KogiExportHub.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <h1 class="mb-4"><i class="bi bi-speedometer2"></i> Admin Dashboard</h1>
    
    <!-- Statistics Cards Row -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase">Total Users</h6>
                            <h2 class="mb-0">@Model.TotalUsers</h2>
                        </div>
                        <i class="bi bi-people-fill" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a asp-action="UserManagement" class="text-white text-decoration-none">View Details</a>
                    <i class="bi bi-arrow-right text-white"></i>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase">Total Investors</h6>
                            <h2 class="mb-0">@Model.TotalInvestors</h2>
                        </div>
                        <i class="bi bi-building" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a asp-action="InvestorManagement" class="text-white text-decoration-none">View Details</a>
                    <i class="bi bi-arrow-right text-white"></i>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card bg-warning text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase">Pending Verification</h6>
                            <h2 class="mb-0">@Model.PendingInvestors</h2>
                        </div>
                        <i class="bi bi-clock-history" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a asp-action="InvestorManagement" asp-route-status="Pending" class="text-white text-decoration-none">Review Now</a>
                    <i class="bi bi-arrow-right text-white"></i>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase">Verified Investors</h6>
                            <h2 class="mb-0">@Model.VerifiedInvestors</h2>
                        </div>
                        <i class="bi bi-check-circle" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a asp-action="InvestorManagement" asp-route-status="Verified" class="text-white text-decoration-none">View Details</a>
                    <i class="bi bi-arrow-right text-white"></i>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Investor Management Section -->
    @if (Model.PendingInvestorsCount > 0)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-warning">
                    <div class="card-header bg-warning text-white">
                        <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Pending Investor Registrations (@Model.PendingInvestorsCount)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Company Name</th>
                                        <th>Contact Person</th>
                                        <th>Country</th>
                                        <th>Investment Capacity</th>
                                        <th>Registration Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var investor in Model.PendingInvestorRegistrations.Take(5))
                                    {
                                        <tr>
                                            <td><strong>@investor.CompanyName</strong></td>
                                            <td>@investor.ContactPerson</td>
                                            <td>@investor.Country</td>
                                            <td>â‚¦@investor.InvestmentCapacity.ToString("N0")</td>
                                            <td>@investor.RegistrationDate.ToShortDateString()</td>
                                            <td>
                                                <a asp-action="ReviewInvestor" asp-route-id="@investor.Id" class="btn btn-sm btn-primary me-1">
                                                    <i class="bi bi-eye"></i> Review
                                                </a>
                                                <button type="button" class="btn btn-sm btn-success me-1" onclick="approveInvestor(@investor.Id, '@investor.CompanyName')">
                                                    <i class="bi bi-check"></i> Approve
                                                </button>
                                                <button type="button" class="btn btn-sm btn-danger" onclick="rejectInvestor(@investor.Id, '@investor.CompanyName')">
                                                    <i class="bi bi-x"></i> Reject
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a asp-action="InvestorManagement" asp-route-status="Pending" class="btn btn-warning">
                            <i class="bi bi-list"></i> View All Pending (@Model.PendingInvestorsCount)
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    
    <!-- Charts and Recent Activity Row -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-pie-chart"></i> Users by Role</h5>
                </div>
                <div class="card-body">
                    <canvas id="usersByRoleChart" style="height: 300px;"></canvas>
                </div>
            </div>
        </div>
        
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-activity"></i> Recent Investor Activity</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Company</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var investor in Model.RecentInvestorActivity)
                                {
                                    <tr>
                                        <td>@investor.CompanyName</td>
                                        <td>
                                            @if (investor.VerificationStatus == "Verified")
                                            {
                                                <span class="badge bg-success">Verified</span>
                                            }
                                            else if (investor.VerificationStatus == "Pending")
                                            {
                                                <span class="badge bg-warning">Pending</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Rejected</span>
                                            }
                                        </td>
                                        <td>@investor.RegistrationDate.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-action="InvestorManagement" class="btn btn-info btn-sm">
                        <i class="bi bi-list"></i> View All Investors
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Recent User Registrations -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-plus"></i> Recent User Registrations</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Role</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentRegistrations != null && Model.RecentRegistrations.Any())
                                {
                                    @foreach (var user in Model.RecentRegistrations)
                                    {
                                        <tr>
                                            <td>@user.FirstName @user.LastName</td>
                                            <td>@user.Role</td>
                                            <td>@user.CreatedAt.ToShortDateString()</td>
                                            <td>
                                                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">No recent registrations</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-action="UserManagement" class="btn btn-secondary">
                        <i class="bi bi-people"></i> View All Users
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Approval Modal -->
<div class="modal fade" id="approvalModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Approve Investor</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="approvalForm" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to approve <strong id="approvalCompanyName"></strong>?</p>
                    <div class="mb-3">
                        <label for="adminComments" class="form-label">Admin Comments (Optional)</label>
                        <textarea class="form-control" id="adminComments" name="adminComments" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Approve Investor</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Rejection Modal -->
<div class="modal fade" id="rejectionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reject Investor</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="rejectionForm" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to reject <strong id="rejectionCompanyName"></strong>?</p>
                    <div class="mb-3">
                        <label for="rejectionReason" class="form-label">Rejection Reason *</label>
                        <textarea class="form-control" id="rejectionReason" name="rejectionReason" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Investor</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Chart for Users by Role
        var ctx = document.getElementById('usersByRoleChart').getContext('2d');
        var usersByRoleChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: [@Html.Raw(string.Join(", ", Model.UsersByRole.Keys.Select(k => $"'{k}'").ToArray()))],
                datasets: [{
                    data: [@string.Join(", ", Model.UsersByRole.Values)],
                    backgroundColor: [
                        '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b', '#858796', '#5a5c69'
                    ],
                    hoverBackgroundColor: [
                        '#2e59d9', '#17a673', '#2c9faf', '#dda20a', '#c23321', '#6e707e', '#3a3b45'
                    ]
                }]
            },
            options: {
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'bottom'
                    }
                }
            }
        });

        // Investor approval/rejection functions
        function approveInvestor(investorId, companyName) {
            document.getElementById('approvalCompanyName').textContent = companyName;
            document.getElementById('approvalForm').action = '/Account/ApproveInvestor/' + investorId;
            new bootstrap.Modal(document.getElementById('approvalModal')).show();
        }

        function rejectInvestor(investorId, companyName) {
            document.getElementById('rejectionCompanyName').textContent = companyName;
            document.getElementById('rejectionForm').action = '/Account/RejectInvestor/' + investorId;
            new bootstrap.Modal(document.getElementById('rejectionModal')).show();
        }
    </script>
}