@model List<KogiExportHub.Models.Investor>

@{
    ViewData["Title"] = "Investor Management";
    var currentStatus = ViewBag.CurrentStatus as string ?? "All";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-building"></i> Investor Management</h2>
        <a asp-action="AdminDashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
    
    <!-- Filter Tabs -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link @(currentStatus == "All" ? "active" : "")" asp-action="InvestorManagement" asp-route-status="All">
                All Investors (@Model.Count)
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(currentStatus == "Pending" ? "active" : "")" asp-action="InvestorManagement" asp-route-status="Pending">
                Pending (@Model.Count(i => i.VerificationStatus == "Pending"))
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(currentStatus == "Verified" ? "active" : "")" asp-action="InvestorManagement" asp-route-status="Verified">
                Verified (@Model.Count(i => i.VerificationStatus == "Verified"))
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(currentStatus == "Rejected" ? "active" : "")" asp-action="InvestorManagement" asp-route-status="Rejected">
                Rejected (@Model.Count(i => i.VerificationStatus == "Rejected"))
            </a>
        </li>
    </ul>
    
    <!-- Investors Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Company Name</th>
                            <th>Contact Person</th>
                            <th>Country</th>
                            <th>Investment Capacity</th>
                            <th>Status</th>
                            <th>Registration Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var investor in Model)
                        {
                            <tr>
                                <td><strong>@investor.CompanyName</strong></td>
                                <td>@investor.ContactPerson</td>
                                <td>@investor.Country</td>
                                <td>â‚¦@investor.InvestmentCapacity.ToString("N0")</td>
                                <td>
                                    @if (investor.VerificationStatus == "Verified")
                                    {
                                        <span class="badge bg-success">Verified</span>
                                    }
                                    else if (investor.VerificationStatus == "Pending")
                                    {
                                        <span class="badge bg-warning">Pending</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Rejected</span>
                                    }
                                </td>
                                <td>@investor.RegistrationDate.ToShortDateString()</td>
                                <td>
                                    <a asp-action="ReviewInvestor" asp-route-id="@investor.Id" class="btn btn-sm btn-primary me-1">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    @if (investor.VerificationStatus == "Pending")
                                    {
                                        <button type="button" class="btn btn-sm btn-success me-1" onclick="approveInvestor(@investor.Id, '@investor.CompanyName')">
                                            <i class="bi bi-check"></i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-danger" onclick="rejectInvestor(@investor.Id, '@investor.CompanyName')">
                                            <i class="bi bi-x"></i>
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>