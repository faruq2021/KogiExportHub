@{
    ViewData["Title"] = "Email Confirmed";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="text-center mb-0"><i class="bi bi-check-circle"></i> Email Confirmed</h2>
                </div>
                <div class="card-body p-4 text-center">
                    <p class="lead">Thank you for confirming your email.</p>
                    <p>Your email has been verified successfully. You can now access all features of KogiExportHub.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                        <i class="bi bi-house"></i> Go to Homepage
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>