@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0"><i class="bi bi-envelope-check"></i> Email Sent</h2>
                </div>
                <div class="card-body p-4 text-center">
                    <p class="lead">Password Reset Email Sent</p>
                    <p>Please check your email for a link to reset your password.</p>
                    <p>If you don't receive an email within a few minutes, please check your spam folder.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                        <i class="bi bi-house"></i> Return to Homepage
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>