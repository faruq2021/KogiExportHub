@{
    ViewData["Title"] = "Insufficient Role";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-person-x"></i> Insufficient Role</h4>
                </div>
                <div class="card-body text-center">
                    <i class="bi bi-person-x text-warning" style="font-size: 4rem;"></i>
                    <h5 class="mt-3">@ViewBag.Message</h5>
                    <p class="text-muted">@ViewBag.Description</p>
                    <p><strong>Required Role:</strong> @ViewBag.RequiredRole</p>
                    
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">
                            <i class="bi bi-house"></i> Go to Home
                        </a>
                        <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-primary">
                            <i class="bi bi-person-gear"></i> Manage Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-shield-x"></i> Insufficient Role</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5>Access Restricted</h5>
                        <p>You don't have the required role to access <strong>@ViewBag.Feature</strong>.</p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="text-danger">Required Roles:</h6>
                                    <p class="mb-0">@ViewBag.RequiredRoles</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="text-info">Your Current Role:</h6>
                                    <p class="mb-0">@ViewBag.CurrentRole</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <h6>How to get access:</h6>
                        <div class="list-group">
                            <div class="list-group-item">
                                <h6 class="mb-1">For Seller Access:</h6>
                                <p class="mb-1">Complete your business profile and apply for seller privileges.</p>
                                <a asp-action="Profile" asp-controller="Account" class="btn btn-sm btn-outline-primary">Update Profile</a>
                            </div>
                            <div class="list-group-item">
                                <h6 class="mb-1">For Admin Access:</h6>
                                <p class="mb-1">Contact system administrator for elevated permissions.</p>
                                <a href="mailto:admin@kogiexporthub.com" class="btn btn-sm btn-outline-secondary">Contact Admin</a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <a href="javascript:history.back()" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </a>
                        <a asp-action="Dashboard" asp-controller="Infrastructure" class="btn btn-outline-primary ms-2">
                            <i class="bi bi-speedometer2"></i> View Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>