@{
    ViewData["Title"] = "Password Reset Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="text-center mb-0"><i class="bi bi-check-circle"></i> Password Reset</h2>
                </div>
                <div class="card-body p-4 text-center">
                    <p class="lead">Your password has been reset successfully.</p>
                    <p>You can now log in with your new password.</p>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary mt-3">
                        <i class="bi bi-box-arrow-in-right"></i> Log in
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>