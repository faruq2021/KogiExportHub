@{
    ViewData["Title"] = "Registration Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0"><i class="bi bi-envelope-check"></i> Registration Confirmation</h2>
                </div>
                <div class="card-body p-4 text-center">
                    <p class="lead">Thank you for registering!</p>
                    <p>We've sent a confirmation email to <strong>@ViewBag.Email</strong>.</p>
                    <p>Please check your email and click on the confirmation link to complete your registration.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                        <i class="bi bi-house"></i> Return to Homepage
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>