@model List<InvestmentOpportunity>
@{
    ViewData["Title"] = "Foreign Investor Portal";
}

<div class="hero-section bg-primary text-white py-5 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold">Invest in Nigeria's Future</h1>
                <p class="lead">Connect with local businesses and discover profitable investment opportunities across Nigeria.</p>
                <div class="mt-4">
                    <a href="@Url.Action("Register")" class="btn btn-light btn-lg me-3">Register as Investor</a>
                    <a href="@Url.Action("Opportunities")" class="btn btn-outline-light btn-lg">Browse Opportunities</a>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="stats-card bg-white text-dark p-4 rounded">
                    <h5>Platform Statistics</h5>
                    <div class="row text-center">
                        <div class="col-4">
                            <h3 class="text-primary">@ViewBag.TotalOpportunities</h3>
                            <small>Open Opportunities</small>
                        </div>
                        <div class="col-4">
                            <h3 class="text-success">@ViewBag.ActiveInvestors</h3>
                            <small>Active Investors</small>
                        </div>
                        <div class="col-4">
                            <h3 class="text-info">₦@(ViewBag.TotalInvestment?.ToString("N0") ?? "0")</h3>
                            <small>Total Investment</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Featured Investment Opportunities</h2>
        </div>
    </div>
    
    <div class="row">
        @foreach (var opportunity in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@opportunity.Title</h5>
                        <p class="card-text">@opportunity.Description.Substring(0, Math.Min(100, opportunity.Description.Length))...</p>
                        <div class="mb-2">
                            <span class="badge bg-primary">@opportunity.Sector</span>
                            <span class="badge bg-secondary">@opportunity.Location?.Name</span>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <small class="text-muted">Required Investment</small>
                                <div class="fw-bold">₦@opportunity.RequiredInvestment.ToString("N0")</div>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Expected ROI</small>
                                <div class="fw-bold text-success">@opportunity.ExpectedROI%</div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="@Url.Action("OpportunityDetails", new { id = opportunity.Id })" class="btn btn-primary btn-sm">View Details</a>
                        <span class="badge bg-@(opportunity.RiskLevel == "Low" ? "success" : opportunity.RiskLevel == "Medium" ? "warning" : "danger") float-end">@opportunity.RiskLevel Risk</span>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <div class="text-center mt-4">
        <a href="@Url.Action("Opportunities")" class="btn btn-outline-primary">View All Opportunities</a>
    </div>
</div>