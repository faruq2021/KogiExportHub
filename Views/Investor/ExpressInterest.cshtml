@{
    ViewData["Title"] = "Express Interest";
    var investor = ViewBag.Investor as Investor;
    var opportunity = ViewBag.Opportunity as InvestmentOpportunity;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Express Investment Interest</h4>
                    <p class="text-muted mb-0">Submit your interest in this investment opportunity</p>
                </div>
                <div class="card-body">
                    <!-- Opportunity Summary -->
                    <div class="alert alert-info">
                        <h5 class="alert-heading">@opportunity.Title</h5>
                        <p class="mb-2">@opportunity.Description.Substring(0, Math.Min(200, opportunity.Description.Length))...</p>
                        <hr>
                        <div class="row">
                            <div class="col-md-4">
                                <strong>Required Investment:</strong> ₦@opportunity.RequiredInvestment.ToString("N0")
                            </div>
                            <div class="col-md-4">
                                <strong>Expected ROI:</strong> @opportunity.ExpectedROI%
                            </div>
                            <div class="col-md-4">
                                <strong>Period:</strong> @opportunity.InvestmentPeriodMonths months
                            </div>
                        </div>
                    </div>
                    
                    <form asp-action="SubmitInterest" method="post">
                        <input type="hidden" name="opportunityId" value="@opportunity.Id" />
                        
                        <div class="mb-3">
                            <label class="form-label">Your Company</label>
                            <input type="text" class="form-control" value="@investor.CompanyName" readonly />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Contact Person</label>
                            <input type="text" class="form-control" value="@investor.ContactPerson" readonly />
                        </div>
                        
                        <div class="mb-3">
                            <label for="proposedInvestment" class="form-label">Proposed Investment Amount (₦) *</label>
                            <input type="number" name="proposedInvestment" class="form-control" 
                                   min="1" max="@opportunity.RequiredInvestment" 
                                   placeholder="Enter your proposed investment amount" required />
                            <div class="form-text">Maximum: ₦@opportunity.RequiredInvestment.ToString("N0")</div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="message" class="form-label">Message to Local Partner *</label>
                            <textarea name="message" class="form-control" rows="5" 
                                      placeholder="Introduce yourself and explain your interest in this opportunity..." required></textarea>
                        </div>
                        
                        <div class="mb-3">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="termsCheck" required />
                                <label class="form-check-label" for="termsCheck">
                                    I confirm that the information provided is accurate and I am genuinely interested in this investment opportunity.
                                </label>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("OpportunityDetails", new { id = opportunity.Id })" class="btn btn-outline-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-success">Submit Interest</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>