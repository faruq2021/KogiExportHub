@model InvestmentOpportunity
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">@Model.Title</h3>
                    <div class="d-flex justify-content-between align-items-center mt-2">
                        <div>
                            <span class="badge bg-primary">@Model.Sector</span>
                            <span class="badge bg-secondary">@Model.Location?.Name</span>
                            <span class="badge bg-@(Model.RiskLevel == "Low" ? "success" : Model.RiskLevel == "Medium" ? "warning" : "danger")">@Model.RiskLevel Risk</span>
                        </div>
                        <span class="badge bg-@(Model.Status == "Open" ? "success" : "secondary") fs-6">@Model.Status</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <h6 class="text-muted">Required Investment</h6>
                            <h4 class="text-primary">â‚¦@Model.RequiredInvestment.ToString("N0")</h4>
                        </div>
                        <div class="col-md-3">
                            <h6 class="text-muted">Expected ROI</h6>
                            <h4 class="text-success">@Model.ExpectedROI%</h4>
                        </div>
                        <div class="col-md-3">
                            <h6 class="text-muted">Investment Period</h6>
                            <h4>@Model.InvestmentPeriodMonths months</h4>
                        </div>
                        <div class="col-md-3">
                            <h6 class="text-muted">Posted</h6>
                            <h6>@Model.CreatedAt.ToString("MMM dd, yyyy")</h6>
                        </div>
                    </div>
                    
                    <h5>Description</h5>
                    <p class="mb-4">@Model.Description</p>
                    
                    @if (!string.IsNullOrEmpty(Model.BusinessPlan))
                    {
                        <div class="mb-3">
                            <h6>Business Plan</h6>
                            <a href="@Model.BusinessPlan" target="_blank" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-download"></i> Download Business Plan
                            </a>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.FinancialProjections))
                    {
                        <div class="mb-3">
                            <h6>Financial Projections</h6>
                            <a href="@Model.FinancialProjections" target="_blank" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-download"></i> Download Financial Projections
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <!-- Local Partner Info -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">Local Partner</h6>
                </div>
                <div class="card-body">
                    <h6>@Model.LocalPartner?.FullName</h6>
                    <p class="text-muted mb-2">@Model.LocalPartner?.BusinessName</p>
                    <p class="small">@Model.LocalPartner?.BusinessDescription</p>
                </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="card">
                <div class="card-body text-center">
                    @if (Model.Status == "Open")
                    {
                        <a href="@Url.Action("ExpressInterest", new { opportunityId = Model.Id })" class="btn btn-success btn-lg w-100 mb-2">
                            <i class="fas fa-handshake"></i> Express Interest
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-lg w-100 mb-2" disabled>
                            <i class="fas fa-lock"></i> Opportunity Closed
                        </button>
                    }
                    
                    <a href="@Url.Action("Opportunities")" class="btn btn-outline-primary w-100">
                        <i class="fas fa-arrow-left"></i> Back to Opportunities
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>