@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                    </div>
                    <h1 class="display-6 fw-bold mb-3">Thank You!</h1>
                    <p class="lead mb-4">Your order has been placed successfully.</p>
                    
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success mb-4">
                            @TempData["Success"]
                        </div>
                    }
                    
                    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center mt-4">
                        <a asp-controller="Marketplace" asp-action="ProductList" class="btn btn-primary btn-lg px-4">
                            <i class="bi bi-shop"></i> Continue Shopping
                        </a>
                        <a asp-controller="Account" asp-action="Orders" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="bi bi-list-ul"></i> View My Orders
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-body p-4">
                    <h4 class="mb-3">What happens next?</h4>
                    <div class="d-flex mb-3">
                        <div class="flex-shrink-0">
                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="bi bi-envelope-check text-white"></i>
                            </div>
                        </div>
                        <div class="ms-3">
                            <h5>Order Confirmation</h5>
                            <p class="text-muted mb-0">You will receive an email confirmation with your order details.</p>
                        </div>
                    </div>
                    <div class="d-flex mb-3">
                        <div class="flex-shrink-0">
                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="bi bi-credit-card text-white"></i>
                            </div>
                        </div>
                        <div class="ms-3">
                            <h5>Payment Processing</h5>
                            <p class="text-muted mb-0">Your payment will be processed and you'll receive payment instructions if needed.</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="bi bi-box-seam text-white"></i>
                            </div>
                        </div>
                        <div class="ms-3">
                            <h5>Order Fulfillment</h5>
                            <p class="text-muted mb-0">The seller will prepare your order and arrange for delivery or pickup.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>