@model List<UserProfile>
@{
    ViewData["Title"] = "User Management";
}

<div class="container-fluid mt-4">
    <h1 class="mb-4"><i class="bi bi-people"></i> User Management</h1>
    
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Registration Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.FirstName @user.LastName</td>
                                <td>@user.Email</td>
                                <td><span class="badge bg-info">@user.Role</span></td>
                                <td>@user.CreatedAt.ToShortDateString()</td>
                                <td>
                                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary me-1">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>