@model List<FundingRequest>
@{
    ViewData["Title"] = "Funding Review";
}

<div class="container-fluid mt-4">
    <h1 class="mb-4"><i class="bi bi-cash-stack"></i> Funding Review</h1>
    
    <div class="card">
        <div class="card-header">
            <h5>Pending Funding Requests</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Proposal Title</th>
                                <th>Requester</th>
                                <th>Amount Requested</th>
                                <th>Category</th>
                                <th>Location</th>
                                <th>Request Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var funding in Model)
                            {
                                <tr>
                                    <td><strong>@funding.Proposal?.Title</strong></td>
                                    <td>@funding.Requester?.AccountName</td>
                                    <td>â‚¦@funding.AmountRequested.ToString("N0")</td>
                                    <td>@funding.Proposal?.Category?.Name</td>
                                    <td>@funding.Proposal?.Location?.Name</td>
                                    <td>@funding.CreatedAt.ToShortDateString()</td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-success me-1" onclick="approveFunding(@funding.Id, '@funding.Proposal?.Title')">
                                            <i class="bi bi-check"></i> Approve
                                        </button>
                                        <button type="button" class="btn btn-sm btn-danger" onclick="rejectFunding(@funding.Id, '@funding.Proposal?.Title')">
                                            <i class="bi bi-x"></i> Reject
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h4 class="text-muted mt-3">No Pending Funding Requests</h4>
                    <p class="text-muted">All funding requests have been processed.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Approval Modal -->
<div class="modal fade" id="approvalModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Approve Funding Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="approvalForm" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to approve funding for <strong id="approvalProposalTitle"></strong>?</p>
                    <div class="mb-3">
                        <label for="amountApproved" class="form-label">Amount to Approve</label>
                        <input type="number" class="form-control" id="amountApproved" name="amountApproved" step="0.01" required />
                    </div>
                    <div class="mb-3">
                        <label for="adminComments" class="form-label">Admin Comments</label>
                        <textarea class="form-control" id="adminComments" name="adminComments" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="recipientAccount" class="form-label">Recipient Account Number</label>
                        <input type="text" class="form-control" id="recipientAccount" name="recipientAccount" required />
                    </div>
                    <div class="mb-3">
                        <label for="bankCode" class="form-label">Bank Code</label>
                        <input type="text" class="form-control" id="bankCode" name="bankCode" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Approve Funding</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Rejection Modal -->
<div class="modal fade" id="rejectionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reject Funding Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="rejectionForm" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to reject funding for <strong id="rejectionProposalTitle"></strong>?</p>
                    <div class="mb-3">
                        <label for="rejectionReason" class="form-label">Rejection Reason *</label>
                        <textarea class="form-control" id="rejectionReason" name="rejectionReason" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Funding</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function approveFunding(fundingId, proposalTitle) {
            document.getElementById('approvalProposalTitle').textContent = proposalTitle;
            document.getElementById('approvalForm').action = '/Admin/ApproveFunding/' + fundingId;
            new bootstrap.Modal(document.getElementById('approvalModal')).show();
        }

        function rejectFunding(fundingId, proposalTitle) {
            document.getElementById('rejectionProposalTitle').textContent = proposalTitle;
            document.getElementById('rejectionForm').action = '/Admin/RejectFunding/' + fundingId;
            new bootstrap.Modal(document.getElementById('rejectionModal')).show();
        }
    </script>
}